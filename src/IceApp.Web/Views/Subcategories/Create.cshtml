@model SubcategoryViewModel;
@{
}
@section Styles{ 

    <link href="~/css/validation-styles.css" rel="stylesheet">
}
<div class="row m-0 p-0 py-3">

    <form class="col-md-4 offset-md-1" asp-action="Create" asp-controller="Subcategories" asp-antiforgery="true" asp-route-parentId="@Model.ParentId" method="post" enctype="multipart/form-data">
        <h2>Добавление подкатегории</h2>
        <div class="form-group">
            <label for="Name">Введите название подкатегории</label>
            <input type="text" asp-for="Name" id="Name" class="form-control" autocomplete="off">
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label class="form-check-label" for="ImagePth">Добавьте изображение</label>
            <input type="file" id="ImagePth" name="formFile" class="form-control-file" required accept="image/jpeg,image/png,image/jpg">
        </div>
       <a asp-controller="Subcategories" asp-action="List" asp-route-categoryId="@Model.ParentId">Вернуться к подкатегориям</a>|
        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/Validations/ValidationFilesImage.js"></script>

}