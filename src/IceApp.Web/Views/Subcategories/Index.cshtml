@model SubcategoriesListViewModel;
@{
}
@section Styles
    {
    <!-- Bootstrap CSS -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Marck+Script&display=swap" rel="stylesheet">
    <link href="~/css/home.css" rel=" stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/css/CategoriesStyles.css" />
}
<div class="row m-0 px-0 pb-5 pt-4 justify-content-center">
    <div class="">
        <h1 class="text-center">@Model.CategoryName</h1>
    </div>
</div>

<div class="row  row-cols-1 row-cols-md-2  row-cols-lg-4 m-0 p-0 px-3">

    @foreach (var cat in Model.subcategories)
    {
        <div class="col mb-4 mt-4 mt-md-0  ">
            <a asp-action="Index" asp-controller="Products" asp-route-scategoryId=@cat.Id>
                <figure class="figure">
                    <div class="img_wrap">
                        <img src="data:image;base64,@Convert.ToBase64String(cat.Image)" class="figure-img img-fluid rounded w-100" alt="Сопроводительная надпись для изображения.">

                    </div>
                    <figcaption class="figure-caption text-center mt-2">@cat.Name</figcaption>
                </figure>
            </a>

        </div>

    }

</div>