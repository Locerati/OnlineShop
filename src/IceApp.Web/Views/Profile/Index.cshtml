@model UserViewModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@section Styles{
    <link rel="stylesheet" href="~/css/ProfileStyles.css" />
}
<div class="row m-0 p-0">
    <div class="avatar-wrapper">
        <img class="profile-pic" src="data:image;base64,@Convert.ToBase64String(Model.Image)" />
        <div class="upload-button">
            <i class="fa fa-arrow-circle-up" aria-hidden="true"></i>
        </div>
        <input class="file-upload" type="file" accept="image/*" />
    </div>
</div>

<div class="row m-0 p-0">
    <div class=" login-block p-4 shadow rounded">
        <h3>Профиль</h3>
        <form class="needs-validation" novalidate method="post" asp-route-file="@Model.Image" asp-action="Edit" asp-controller="Profile" asp-antiforgery="true">
            
            <div class="form-group">
                <label for="RegistrationName">ФИО</label>
                <input type="text" class="form-control" asp-for="UserName" pattern="[А-Яа-я]*?\s[А-Яа-я]*?\s[А-Яа-я]*" id="RegistrationName" required="" name="UserName">
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Введите ФИО полностью
                </div>
            </div>

            <div class="form-group">
                <label for="AddressInput">Аддрес проживания</label>
                <input type="text" class="form-control" asp-for="Address" id="AddressInput" required="" name="Address">
                <div class="invalid-feedback">
                    Please provide a valid address.
                </div>
            </div>

            <div class="form-group">
                <label for="PhoneInput">Номер телефона</label>
                <input type="tel" class="form-control" asp-for="PhoneNumber" pattern="\+7\s?[\(]{0,1}9[0-9]{2}[\)]{0,1}\s?\d{3}[-]{0,1}\d{2}[-]{0,1}\d{2}" id="PhoneInput" required name="PhoneNumber">
                <div class="invalid-feedback">
                    Пожалуйста введите ваш номер в фомате +7 900 123-45-67 .
                </div>
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-warning" id="pofile-sumbit" type="submit" href="">Изменить</button>
            </div>
        </form>

    </div>
</div>

@section Scripts{
    <script src="~/js/AccountScript.js"></script>
    <script type="text/javascript" src="~/js/ProfileScript.js"></script>
}