@model LoginViewModel;
@{
}
@section Styles{ 
<style>
    ul li {
        list-style-type: none;
    }
    
</style>
}
<div class="row m-0 my-5 p-0 py-5" style="display:flex; justify-content:center;">

    <div class=" login-block p-4 shadow rounded">
        <h3>
            Войти в профиль
        </h3>
        <form asp-controller="Account" asp-action="Login">
            <div class="invalid-feedback" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label for="InputEmail1">Email</label>
                <input type="email" name="Email" class="form-control" id="InputEmail1" aria-describedby="emailHelp" required>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Пароль</label>
                <input type="password" name="Password" class="form-control" id="exampleInputPassword1" minlength="8" required>
            </div>
            <div class="form-text text-danger">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
            </div>
            <button type="submit" class="btn btn-primary">Войти</button>
        </form>
        <a class="text-secondary m-0" asp-controller="Account" asp-action="Registration">Регистрация</a>
    </div>
</div>
